extends ../base

block content
  main.main
    .forgot-password-form
      h2.heading-secondary.ma-bt-lg Forgot password?
      form#form-forgot-password.form
        .form__group
          label.form__label(for='email') Enter your email username to retrieve password
          input#email.form__input(type='email', placeholder='johndoe@example.com', required)
        .form__group
          button.btn.btn--green Submit
